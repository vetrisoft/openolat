<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
 <class name="org.olat.data.group.area.BGtoAreaRelationImpl" table="o_gp_bgtoarea_rel">
 
	<cache usage="read-write" />

    <id name="key"
		type="long"
		column="bgtoarea_id"
		unsaved-value="null">
	    <generator class="hilo" />
    </id>
   
   	<version name="version" access="field" column="version" type="int"/>
	<property  name="creationDate" column="creationdate" type="timestamp" />   
        
    <many-to-one name="businessGroup" class="org.olat.data.group.BusinessGroupImpl" outer-join="auto" cascade="none">  
		<column name="group_fk" not-null="true"	unique-key="idx_bgtoarea" />    	
    </many-to-one>  	
   
	<many-to-one name="groupArea" class="org.olat.data.group.area.BGAreaImpl" outer-join="auto" cascade="none">  
		<column name="area_fk" not-null="true"	unique-key="idx_bgtoarea" />    	
    </many-to-one>  	
        	
 </class>
</hibernate-mapping>

