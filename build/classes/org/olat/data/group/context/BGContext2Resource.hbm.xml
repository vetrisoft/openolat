<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.olat.data.group.context.BGContext2Resource" table="o_gp_bgcontextresource_rel" lazy="false">
    		
		<cache usage="read-write" />

        <id name="key"
        	type="long"
        	column="groupcontextresource_id"
        	unsaved-value="null">
            <generator class="hilo" />
        </id>
        
        <version name="version" access="field" column="version" type="int"/>
		<property  name="creationDate" column="creationdate" type="timestamp" />   
 		
		<many-to-one 
 		   	name="resource" 
    		class="org.olat.data.resource.OLATResourceImpl"
    		outer-join="false" 
    		cascade="none"
    		lazy="false">  
			<column 
				name="oresource_id" 
				not-null="true" 
				unique="false" />    	
    	</many-to-one> 
    	
		<many-to-one 
 		   	name="groupContext" 
    		class="org.olat.data.group.context.BGContextImpl"
    		outer-join="false" 
    		cascade="none"
    		lazy="false">
			<column 
				name="groupcontext_fk" 
				not-null="true" 
				unique="false" />    	
    	</many-to-one> 
    	
    </class>
</hibernate-mapping>
